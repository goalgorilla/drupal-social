extends ./layout/base-an.jade

block title
  title Reset your password

block secondary_navigation
  
  .style-default-bright
    .container
      nav(role="navigation" aria-label="Tabs")
        h2.visually-hidden Secondary navigation
        ul.nav.nav-tabs.tabs-center.style-default-bright.nav-tabs--xl
          li
            a(href="login.html") Log in
          li
            a(href="sign-up.html") Sign up
          li.active
            a(href='reset-password.html') Reset password
            span.visually-hidden (active tab)

block content
  
  .row
    .col-md-8.section-header
      h2.h3.section-title Reset your password

      .card
        .card-body

          form(accept-charset='UTF-8')
            .form-group
              label.form-required(for='edit-name') Username or email address
              input#edit-name.form-control(type='text', autocorrect='off', autofocus='autofocus',  required)
              .help-block Password reset instructions will be sent to your registered email address.
                
            .margin-top-xxl.clearfix
              input.btn.btn-primary.pull-right(type='submit', value='Submit')
