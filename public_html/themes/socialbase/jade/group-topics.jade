extends ./layout/base-lu.jade

block title
  title Michael Angarano

block pagetitle
  .container.hero-container.hidden-xs
    .cover.cover-img(style="background-image: url('content/images/event-hero.jpg')")  
      .cover-wrap   
        h1.page-title Local group Amsterdam
        .hero-footer 
          div 20 Members
          div Curabitur blandit tempus porttitor. Fusce dapibus, tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo sit amet risus.
  
      .primary-action-region
        button#joinButton.btn.btn-accent.btn-raised(type="button", autocomplete="off", data-toggle-text="Joined") Join
  
  .container
    .visible-xs-block.section
      a.btn.btn-raised.btn-user(href="my-stream.html")
        i.material-icons.pull-left keyboard_arrow_left
        | Back to group stream

  .container.hero-container    
    .brand-secondary.z-depth-1.hidden-xs
      nav(role="navigation" aria-label="Tabs")
        h2.visually-hidden Secondary navigation
        ul.nav.nav-tabs.tabs-center.brand-secondary.nav-tabs--xl
          li
            a(href="my-stream.html") Stream  
          li.active
            a(href='my-topics.html') Topics
            span.visually-hidden (active tab) 
          li
            a(href='my-events.html') Events 
          li
            a(href="my-groups.html") Members
      
block content
  
  .row
  
    .col-xs-12
      h2.h3.section-title Group topics
    
    .col-xs-12.col-sm-3.pull-right.margin-bottom-l
      a.waves-effect.waves-light.btn.btn-block.btn-user.btn-raised(href='node-add-topic.html') 
        i.material-icons.pull-left add
        | Add a topic

      btn.waves-effect.waves-light.btn.btn-block.btn-primary.btn-raised.visible-xs-block.js-open-canvas
        i.material-icons.pull-left tune
        | Filters
      br 
      br
      .off-canvas.off-canvas-right.off-canvas-xs-only.visible-sm-card
        .offcanvas-head
          header.card__label filter
          .offcanvas-tools.visible-xs-block
            .js-close-canvas.btn.btn-icon-toggle.btn-default-light.pull-right
              i.material-icons close
        
        .offcanvas-body
          form
            .form-group
              label Topic type
              select.form-control(onchange="enableMe('reset-button', this)")
                option(value="", selected="") All types
                option(value="blog") Blog
                option(value="discussion") Discussion
                option(value="topic") Topic
            .form-group
              label Status
              select.form-control(onchange="enableMe('reset-button', this)")
                option(value="", selected="") All statusses
                option(value="published") Published
                option(value="unpublished") Unpublished
            .form-group.margin-top-l.clearfix
              input#reset-button.btn.btn-primary.pull-right.disabled(type="submit", value="Reset")

    .col-xs-12.col-sm-9
      include molecules/_topic1.jade
      include molecules/_topic2.jade
      include molecules/_topic3.jade
      include molecules/_topic4.jade
        
      nav
        ul.pagination
          li.pager__item.pager__item--previous.disabled
            a(href="#0", aria-label='Previous')    
              span(aria-hidden="true") 
                i.material-icons chevron_left
          li.pager__item.active
            a(href="#1") 1
          li.pager__item 
            a(href="#1") 2
          li.pager__item 
            a(href="#1") 3          
          li.pager__item 
            a(href="#1") 4
          li.pager__item.pager__item--next
            a(href='#', aria-label='Next')
              span(aria-hidden="true")
                i.material-icons chevron_right

block scriptinline  
  
  script.
    function enableMe() {
      jQuery('#reset-button').removeClass('disabled');
    }
    
    jQuery(document).ready(function($){
      $('#joinButton').on('click', function () {
        
        // button text will toggle "Cancel enrollment"
        var buttonState = $(this).data("toggle-text");
        $(this).data('toggle-text', $(this).text()).text(buttonState);
        
        // button active state will toggle
        $(this).toggleClass('active') 
        
        // show / hide previous text element
        $(this).prev('p').toggleClass('hidden');
      })  
    });
